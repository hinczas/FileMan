@model FileMan.Models.ViewModels.ItemViewModel
@using FileMan.Models;
@using FileMan.Models.ViewModels;
@{
    ViewBag.Title = "Home Page";
}

@if (TempData["Error"] != null)
{
    if ((bool)TempData["Error"])
    {
        <div class="col-sm-12">
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin:0px 0px 10px 0px; padding:8px 15px 8px 15px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-right:21px;"><span aria-hidden="true">&times;</span></button>
                <strong>Warning!</strong> @TempData["Message"]
            </div>
        </div>
    }
}
<div class="col-md-12">
    <ol class="breadcrumb" style="margin-bottom:10px;">
        @if (@Model.Breadcrumbs != null || @Model.Breadcrumbs.Count() > 0)
        {
            for (int i = @Model.Breadcrumbs.Count() - 1; i >= 0; i--)
            {
                <li style="cursor:pointer; color:royalblue;" onclick="goToFolder(@Model.Breadcrumbs.ElementAt(i).Id)">@Model.Breadcrumbs.ElementAt(i).Name</li>
            }
        }
        <li class="active">@Model.Current.Name</li>
    </ol>
</div>
<div class="col-md-6" style="padding-left:15px;">
    <div class="btn-group btn-group-sm" role="group" style="margin-bottom:10px; float:left;">
        <button class="btn btn-default" type="button" data-toggle="modal" data-target="#filModal" title="New Document"><i class="fas fa-file-medical"></i></button>
        <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#catCollapse" title="New Category"><i class="fas fa-folder-plus"></i></button>
        <button type="button" class="btn btn-sm btn-default" id="roleFormBtn" data-toggle="collapse" href="#toolsCollapse" role="button" aria-expanded="false" aria-controls="toolsCollapse" title="Upload file"><i class="fas fa-upload"></i></button>
    </div>
</div>

<div class="col-md-6">

    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "mainSearchForm" }))
    {
        @Html.AntiForgeryToken()
    <div class="input-group input-group-sm" style="float:right;">
        <input type="text" class="form-control" id="searchBox" onkeyup="searchMain(this)" placeholder="Search for.." name="search" style="width:200px;" />
        <select name="scope" class="form-control" style="max-width:150px;">
            <option value=1>Number &amp; Name</option>
            <option value=2>Number, Name, Description &amp; Comment </option>
        </select>
        <!--button class="btn btn-default form-control" type="submit" style="width:38px;"><i class="fas fa-search"></i></button -->
        <button class="btn btn-default form-control" type="button" style="width:38px;" onclick="mainSearch(mainSearchForm)"><i class="fas fa-search"></i></button>

    </div><!-- /input-group -->

    }
</div>

<!-- New Category -->
<div class="col-sm-12">
    <div class="row" style="padding-top:0px;">
        <div class="collapse" id="catCollapse">
            <div class="disp-align-ver row-menu row-menu-sm">
                @using (Html.BeginForm("Create", "Folders", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id="catForm", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" class="form-control" name="Pid" value="@Model.Current.Id" />
                    <input type="hidden" class="form-control" name="Type" value="dir" />
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control form-control-sm" name="Name" placeholder="Name..." autofocus required/>
                    </div>
                    <div class="col-sm-7">
                        <input type="text" autocomplete="off" class="form-control" name="Description" placeholder="Description..." />
                    </div>
                    @*<div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control" name="Comment" placeholder="Comment..." />
                    </div>*@
                    <div class="col-sm-1">
                        <input type="button" value="add" class="btn btn-success btn-sm" id="submitBtn" onclick="createCategory('#catForm', '/Folders/Create/', '@Model.Current.Id')" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- File import buttons -->
<div class="col-sm-12">
    <div class="row" style="padding-top:0px;">
        <div class="collapse" id="toolsCollapse">
            <div class="disp-align-ver row-menu row-menu-nr">
                @using (Html.BeginForm("ImportFiles", "Folders", FormMethod.Post, new { id = "fileForm", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-sm-1">
                        <button class="btn btn-primary btn-sm" type="button" id="fileSelect" onclick="fileSelector(this)">open</button>
                    </div>
                    <div class="col-sm-2">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="radio" name="fileType" value="doc" aria-label="docType">
                            </span>
                            <input type="text" class="form-control" aria-label="fileText" value="Documents" disabled>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="radio" name="fileType" value="dir" aria-label="catType" checked>
                            </span>
                            <input type="text" class="form-control" aria-label="fileText" value="Directories" disabled>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group input-group-sm">
                            <span class="input-group-addon">
                                <input type="checkbox" name="intoCurrent" value="@Model.Current.Id" checked>
                            </span>
                            <input type="text" class="form-control input-lg" aria-label="fileText" value="Load into current directory" disabled>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <input type="file" name="fileImp" value="Import" id="fileImport" class="disp-none" hidden required />

                        <button class="btn btn-success btn-sm" type="submit" id="fileSelectSave" style="float:right;">upload</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Tables -->
<div class="col-md-12">
    <!-- Folders -->
    <div id="replaceDocTable">
        <table class="table table-condensed table-hover table-folders">
            <thead class="thead-dark">
                <tr>
                    <th style="width:15px;" scope="col"></th>
                    <th style="width:200px;" scope="col"></th>
                    <th style="width:380px; max-width:250px;" scope="col"></th>
                    <th style="width:30px;" scope="col"></th>
                </tr>
            </thead>
            <tbody id="mainTable">
                @if (Model.Current.IsRoot)
                {
                    <tr>
                        <td scope="row">
                            <i class="fas fa-folder"></i>
                        </td>
                        <td colspan="5">...</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td style="cursor:pointer;" scope="row" onclick="goToFolder(@Model.Current.Pid)">
                            <i class="fas fa-folder"></i>
                        </td>
                        <td colspan="5" style="cursor:pointer;" onclick="goToFolder(@Model.Current.Pid)">...</td>
                    </tr>
                }
                @foreach (Folder itm in Model.ChildrenDirs)
                {
                    <tr>
                        <td style="cursor:pointer;" scope="row" onclick="goToFolder(@itm.Id)">
                            <i class="fas fa-folder"></i>
                        </td>
                        <td style="cursor:pointer;" onclick="goToFolder(@itm.Id)">@itm.Name</td>
                        <td style="cursor:pointer; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; max-width:250px;" title="@itm.Description" onclick="goToFolder(@itm.Id)">@itm.Description</td>
                        <td align="right">
                            <span style="cursor:pointer;" class="span4 proj-div" data-toggle="modal" data-target="#@itm.Name"><span><i class="fas fa-info-circle"></i></span></span>
                            <span class="cur-point" onclick="deleteCategory(@itm.Id)"><i class="fas fa-times-circle"></i></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <!-- Documents -->
        <table class="table table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width:15px;" scope="col"></th>
                    <th style="width:70px;" scope="col">Number</th>
                    <th style="width:25px;" scope="col">Ver</th>
                    <th style="width:455px;" scope="col">Name</th>
                    @*<th style="width:30px;" scope="col"></th>*@
                </tr>
            </thead>
            <tbody id="mainTable">
                @foreach (MasterFile itm in Model.ChildrenFiles)
                {
                    <tr title="@itm.Description">
                        <td scope="row" style="cursor:pointer;" onclick="goToFile(@itm.Id, @Model.Current.Id)">
                            <i class="fas fa-file"></i>
                        </td>
                        <td style="cursor:pointer;" onclick="goToFile(@itm.Id, @Model.Current.Id)">@itm.Number</td>
                        <td style="cursor:pointer;" onclick="goToFile(@itm.Id, @Model.Current.Id)">
                            @if (itm.Revisions != null && itm.Revisions.Count() > 0)
                            {
                                <span>@itm.Revisions.OrderByDescending(a => a.Id).Take(1).FirstOrDefault().Draft</span>
                                //@Html.ActionLink(itm.Revisions.OrderByDescending(a => a.Id).Take(1).FirstOrDefault().Draft, "GetFile", "FileRevisions", new { id = itm.Revisions.Select(a => a.Id).Max() }, new { title = "Directory" })
                            }
                        </td>
                        <td style="cursor:pointer;" onclick="goToFile(@itm.Id, @Model.Current.Id)">@itm.Name</td>
                        @*<td align="right">

                            @if (itm.Folders.Count() > 0)
                            {
                                <a href="@Url.Action("Edit", "MasterFiles", new { id=itm.Id })"><i class="fas fa-pen-square"></i></a>
                                <span onclick="deleteDocument(@itm.Id, @Model.Current.Id)" class="cur-point"><i class="fas fa-times-circle"></i></span>
                            }
                            else
                            {
                                // data-toggle="tooltip" data-placement="top" title="@itm.Description"
                                <a href="@Url.Action("Details", "MasterFiles", new { id = itm.Id })"><i class="fas fa-info-circle"></i></a>
                                <a href="@Url.Action("Edit", "MasterFiles", new { id = itm.Id })"><i class="fas fa-pen-square"></i></a>
                            }

                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Unassigned -->
    @if (Model.UnassignedFiles != null && @Model.UnassignedFiles.Count() > 0)
    {
        using (Html.BeginForm("MoveFiles", "Folders", FormMethod.Post, new { enctype = "multipart/form-data", id="moveFilesForm" }))
        {
            @Html.AntiForgeryToken()
<div class="col-md-12">
    <p></p><br />
    <p></p><br />
    <p></p><br />
    <input type="hidden" name="Id" value=@Model.Current.Id />
    <div class="panel-group">
        <div class="panel panel-warning">
            <div class="panel-heading panel-title">
                <div class="container" style="align-items:center; width:100%; padding:0px;">
                    <h4 class="cus-h4">
                        <a data-toggle="collapse" href="#collapse1">Uncategorised</a>
                    </h4>
                    <span class="badge badge-light">@Model.UnassignedFiles.Count()</span>
                    <div class="input-group input-group-sm pull-right" style="max-width:200px;">
                        <input type="text" class="form-control form-control-sm" id="searchItems" onkeyup="searchUnassigned(this)" placeholder="filter..." name="search" style="width:200px;" />

                        <span class="input-group-btn">
                            <button type="button" name="action" class="btn btn-sm btn-primary" onclick="moveDocuments('#moveFilesForm')">Move</button>
                        </span>
                    </div><!-- /input-group -->
                </div>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <table class="table table-condensed" id="tbl-unassigned">
                    <thead class="thead-dark">
                        <tr>
                            <th width="1%"><input class="check-all-items" name="toggle" type="checkbox" value="0" onchange="checkAllItems(this)" /></th>
                            <th style="width:70px;" scope="col">Number</th>
                            <th style="width:25px;" scope="col">Ver</th>
                            <th style="width:350px;" scope="col">Name</th>
                            <th style="width:130px;" scope="col">Added</th>
                            <th style="width:130px;" scope="col">Edited</th>
                            @*<th scope="col"></th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MasterFile itm in Model.UnassignedFiles)
                        {
                            <tr>
                                <td scope="row"><input type="checkbox" class="form-check-input" name="files" value=@itm.Id style="margin-top:2px;"></td>
                                <td style="cursor:pointer;" onclick="goToFile(@itm.Id)">@itm.Number</td>
                                <td style="cursor:pointer;" onclick="goToFile(@itm.Id)">
                                    @if (itm.Revisions != null && itm.Revisions.Count() > 0)
                                    {
                                    <span>@itm.Revisions.OrderByDescending(a => a.Id).Take(1).FirstOrDefault().Draft</span>
                                    }
                                </td>
                                <td style="cursor:pointer;" onclick="goToFile(@itm.Id)">@itm.Name</td>
                                <td style="cursor:pointer;" onclick="goToFile(@itm.Id)">@itm.Added</td>
                                <td style="cursor:pointer;" onclick="goToFile(@itm.Id)">@itm.Edited</td>
                                @*<td align="right">
                                        <a href="@Url.Action("Edit", "MasterFiles", new { id = itm.Id })"><i class="fas fa-pen-square"></i></a>
                                    </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
        }
    }



    <!-- Dir Info Modal -->
    @foreach (Folder itm in Model.ChildrenDirs)
    {
        <div id="@itm.Name" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>@itm.Name</h3>
                    </div>
                    <div class="modal-body">
                        <h4>Description</h4>
                        <p>
                            <span style="white-space: pre-line">@itm.Description</span>
                        </p><br />
                        <h4>ChangeLog</h4>
                        <p>

                            <span style="white-space: pre-line">@itm.Changelog</span>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>


                </div>
            </div>
        </div>
    }

    <!-- File Modal -->
    <div id="filModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                @using (Html.BeginForm("Create", "MasterFiles", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id="newDocForm", @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">New Document</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-12" style="float:none">
                            <input type="hidden" class="form-control" name="FolderId" value="@Model.Current.Id" />
                            <input type="hidden" class="form-control" name="Number" value="0" />
                            <div class="form-group">
                                <input type="Text" autocomplete="off" class="form-control" name="Name" placeholder="Name..." autofocus />
                            </div>
                            <div class="form-group">
                                <textarea rows="5" autocomplete="off" cols="10" class="form-control" name="Description" placeholder="Description..."></textarea>
                            </div>
                            <div class="form-group">
                                <span class="cur-point" data-toggle="collapse" data-target="#commMod">Additional information (optional)</span>

                                <div id="commMod" class="collapse">
                                    <textarea rows="3" autocomplete="off" cols="10" class="form-control" name="Comment" placeholder="Extra info..."></textarea>
                                </div>

                            </div>
                            @*<div class="form-group">
                                <input style="margin-bottom: 10px;" class="form-control" type="file" name="file">
                            </div>*@

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-success" onclick="createDocument('#newDocForm', '@Model.Current.Id')">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Directory Modal -->
    <div id="dirModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <div class="modal-content">
                @using (Html.BeginForm("Create", "Folders", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">New Directory</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-12" style="float:none">
                            <input type="hidden" class="form-control" name="Pid" value="@Model.Current.Id" />
                            <input type="hidden" class="form-control" name="Type" value="dir" />
                            <div class="form-group">
                                <input type="Text" autocomplete="off" class="form-control" name="Name" placeholder="Name..." autofocus />
                            </div>
                            <div class="form-group">
                                <textarea rows="5" autocomplete="off" cols="10" class="form-control" name="Description" placeholder="Description..."></textarea>
                            </div>
                            <div class="form-group">
                                <textarea rows="3" autocomplete="off" cols="10" class="form-control" name="Comment" placeholder="Comment..."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input type="submit" value="Save" class="btn btn-success" id="submitBtn" />
                    </div>
                }
            </div>

        </div>
    </div>
